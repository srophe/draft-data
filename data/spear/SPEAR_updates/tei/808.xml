                <listPerson>
                    <personGrp>
                        <persName ref="http://syriaca.org/person/3602"> Two children struck dead
                            when their <persName ref="http://syriaca.org/person/3601"
                                >parents</persName> opposed their ordination by <persName
                                ref="http://syriaca.org/person/2097"> Simeon the mountaineer
                            </persName></persName>
                    </personGrp>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/808"/><citedRange
