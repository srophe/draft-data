            <div uri="http://syriaca.org/spear/825-1" resp="#tmcneir, #rtrupiano, #syoung, #egibes, #jnsaint-laurent">
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1769">
                            Hala the Zealous
                        </persName>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
