                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/holy-places http://syriaca.org/keyword/altars">
                        <desc><persName ref="http://syriaca.org/person/1980">Paul</persName> made an
                            altar and a chapel in his cave. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/798"/>
                    <citedRange unit="pp">117</citedRange>
                </bibl>
                <bibl type="primary">
