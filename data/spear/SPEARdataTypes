Person factoid: birth date 
            <div type="factoid" xml:id="factoid-55" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/8559-55</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/2245"/>
                        <birth>
                            <choice>
                                <reg><date notBefore="-0003-10" notAfter="-0002-09"
                                        calendar="Gregorian" srophe:computed-start="-0003-10-01"
                                        srophe:computed-end="-0002-09-01">3/2 B.C.</date></reg>
                                <orig><date when-custom="0309" datingMethod="Seleucid">A. Gr.
                                        309</date></orig>
                            </choice>
                            <note type="desc"> Jesus was born in 3/2 B.C. </note>
                        </birth>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/633"/>
                    <citedRange unit="pp">3</citedRange>
                </bibl>
                <bibl type="urn">
                    <ptr target="urn:cts:syriacLit:nhsl8559.syriacCorpus57:4"/>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/657"/>
                    <citedRange unit="part">3</citedRange>
                </bibl>
            </div>


